{
  "compilerOptions": {
    "sourceMap": true,
    "noImplicitAny": true,
    "module": "ES2022",
    "allowJs": true,
    "moduleResolution": "node",
    "strict": true,
    "target": "ES6",
    "outDir": "./dist/",
    "lib": [
      "dom", "es6"
    ],
    "types": [],
    "baseUrl": "./node_modules",
    "jsx": "react-jsx",
    "esModuleInterop": true,
    "typeRoots": ["node_modules"]
  },
  "include": ["./src/**/*"],
  "exclude": ["node_modules"]
}
